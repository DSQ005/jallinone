        <include name="launch16.jnlp"/>
        <include name="appicon11.gif"/>
        <include name="jAllInOne.jpg"/>
      </fileset>
    </copy>
    <copy todir="${webapps}/jAllInOne" >
      <fileset dir="${lib}">
        <include name="jcalendar.jar"/>
        <include name="jnlp.jar"/>
      </fileset>
      <fileset dir="${libOpenSwing}">
