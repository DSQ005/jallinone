    </copy>
    <copy todir="${webapps}/jAllInOne/WEB-INF" >
      <fileset dir="${classes}">
        <include name="web.xml"/>
      </fileset>
    </copy>
    <copy todir="${webapps}/jAllInOne/WEB-INF/classes" >
      <fileset dir="${classes}">
        <include name="Resources_*.xml"/>
        <include name="net/sf/**"/>
        <include name="Rules.xml"/>
        <include name="*.ini"/>
        <include name="reports/*.jasper"/>
        <include name="reports/*.properties"/>
      </fileset>
    </copy>
  </target>

  <target name="createdistribution">
    <mkdir dir="${tmp}"/>
    <copy todir="${lib}" >
      <fileset dir="${libOpenSwing}">
        <include name="clientos.jar"/>
        <include name="serveros.jar"/>
      </fileset>
    </copy>
    <delete dir="${tmp}/lib"/>
    <copy todir="${tmp}/lib" >
      <fileset dir="${lib}" >
        <include name="*.jar"/>
      </fileset>
    </copy>
    <copy todir="${tmp}/pub" >
      <fileset dir="${pub}" >
        <include name="build.xml"/>
        <include name="jallinone.war"/>
      </fileset>
    </copy>
    <copy todir="${tmp}" >
      <fileset dir="${basedir}/../" >
        <include name="licence.txt"/>
        <include name="README.txt"/>
        <include name="relnotes.txt"/>
      </fileset>
    </copy>
    <copy todir="${tmp}/docs" >
      <fileset dir="${docs}" >
        <include name="build.xml"/>
      </fileset>
    </copy>
    <copy todir="${tmp}/classes" >
      <fileset dir="${classes}">
        <include name="*.xml"/>
        <include name="images/*"/>
        <include name="demo*/**"/>
        <include name="reports/**"/>
        <include name="*.ini"/>
        <include name="*.jnlp"/>
      </fileset>
    </copy>
    <copy todir="${tmp}/src" >
      <fileset dir="${src}">
        <include name="org/**/*.java"/>
      </fileset>
    </copy>
  </target>


</project>
